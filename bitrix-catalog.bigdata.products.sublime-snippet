	"SHOW_FROM_SECTION" => "${25:N}",		// Показывать товары из раздела
	"IBLOCK_TYPE" => "${26:}",		// Тип инфоблока
	"IBLOCK_ID" => "${27:}",		// Инфоблок
	"SECTION_ID" => "${28:}",		// ID раздела
	"SECTION_CODE" => "${29:}",		// Код раздела
	"SECTION_ELEMENT_ID" => "${30:}",		// ID элемента, для которого будет выбран раздел
	"SECTION_ELEMENT_CODE" => "${31:}",		// Символьный код элемента, для которого будет выбран раздел
	"DEPTH" => "${32:2}",		// Максимальная отображаемая глубина разделов
	"CACHE_TYPE" => "${33:A}",		// Тип кеширования
	"CACHE_TIME" => "${34:3600}",		// Время кеширования (сек.)
	"CACHE_NOTES" => "${35:}",		// 
	"CACHE_GROUPS" => "${36:Y}",		// Учитывать права доступа
	"SHOW_PRODUCTS_4" => "${37:N}",		// Показывать товары каталога
