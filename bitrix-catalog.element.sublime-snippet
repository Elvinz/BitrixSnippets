	"PRICE_VAT_INCLUDE" => "${27:Y}",		// Включать НДС в цену
	"PRICE_VAT_SHOW_VALUE" => "${28:N}",		// Отображать значение НДС
	"PRODUCT_PROPERTIES" => "${29:}",		// Характеристики товара
	"USE_PRODUCT_QUANTITY" => "${30:N}",		// Разрешить указание количества товара
	"LINK_IBLOCK_TYPE" => "${31:}",		// Тип инфоблока, элементы которого связаны с текущим элементом
	"LINK_IBLOCK_ID" => "${32:}",		// ID инфоблока, элементы которого связаны с текущим элементом
	"LINK_PROPERTY_SID" => "${33:}",		// Свойство, в котором хранится связь
	"LINK_ELEMENTS_URL" => "${34:link.php?PARENT_ELEMENT_ID=#ELEMENT_ID#}",		// URL на страницу, где будет показан список связанных элементов
	"CACHE_TYPE" => "${35:A}",		// Тип кеширования
