	"BASKET_URL" => "${10:/personal/basket.php}",		// URL, ведущий на страницу с корзиной покупателя
	"ACTION_VARIABLE" => "${11:action}",		// Название переменной, в которой передается действие
	"PRODUCT_ID_VARIABLE" => "${12:id}",		// Название переменной, в которой передается код товара для покупки
	"PRODUCT_QUANTITY_VARIABLE" => "${13:quantity}",		// Название переменной, в которой передается количество товара
	"PRODUCT_PROPS_VARIABLE" => "${14:prop}",		// Название переменной, в которой передаются характеристики товара
	"SECTION_ID_VARIABLE" => "${15:SECTION_ID}",		// Название переменной, в которой передается код группы
	"META_KEYWORDS" => "${16:-}",		// Установить ключевые слова страницы из свойства
	"META_DESCRIPTION" => "${17:-}",		// Установить описание страницы из свойства
	"BROWSER_TITLE" => "${18:-}",		// Установить заголовок окна браузера из свойства
	"SET_TITLE" => "${19:Y}",		// Устанавливать заголовок страницы
	"SET_STATUS_404" => "${20:N}",		// Устанавливать статус 404, если не найдены элемент или раздел
	"ADD_SECTIONS_CHAIN" => "${21:Y}",		// Включать раздел в цепочку навигации
	"PROPERTY_CODE" => "${22:}",		// Свойства
	"OFFERS_LIMIT" => "${23:0}",		// Максимальное количество предложений для показа (0 - все)
